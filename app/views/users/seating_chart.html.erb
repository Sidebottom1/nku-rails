<h1>List of Users</h1>
<%= form_tag seating_chart_users_path, method: :get do %>
  <p>
    <%= date_field_tag(:date, @date) %>
    <%= submit_tag 'search' %>
  </p>
<% end %> 


<h2> Present </h2>
<table>
  <tr>
    <td class = "visible">
      <% User.in_seat(1, @date).each do |s1| %>
        <%= s1.name %>
        <% if s1.image_url != "" %>
          <img src="<%= s1.image_url %>" height="80" width="80" />
        <%- else -%>
          <%= image_tag s1.gravatar_url(:default => "wavatar") %>
        <% end %>
      <% end %>
    </td>
    <td class = "visible">
      <% User.in_seat(2, @date).each do |s2| %>
