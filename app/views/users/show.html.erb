<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Nickname:</strong>
  <%= @user.nickname %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Picture:</strong>
  
    <%= image_tag @user.imageURL if @user.imageURL? %>
  
</p>

<h2>Info</h2>
<%= render @user.name %><br>
<%= render @user.nickname %>
<%= render @user.email %>
<%- if @user.imageURL -%>
  <%= render @user.imageURL %>
<%- else if @user.email? -%>
  <%= image_tag @user.gravatar_url %>
  <%= render @user.gravatar_url %>
<%- else -%>
  <%= image_tag @user.gravatar_url(:default) %>
  <%= render @user.gravatar_url %>
<%- end %>


<%= link_to 'Edit User', edit_user_path(@user) %> |
<%= link_to 'Back to Users', users_path %>