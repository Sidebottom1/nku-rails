<p>
  <strong>Name:</strong>
  <%= @maker.name %>
</p>

<p>
  <strong>Nickname:</strong>
  <%= @maker.nickname %>
</p>

<p>
  
  <%= @maker.email %>
</p>

<p>
  
    <%= image_tag @maker.imageURL if @maker.imageURL? %>
  
</p>

<h2>Info</h2>
<%= render @maker.name %><br>
<%= render @maker.nickname %>
<%= render @maker.email %>
<%- if @maker.imageURL -%>
  <%= render @maker.imageURL %>
<%- else if @maker.email? -%>
  <%= image_tag @maker.gravatar_url %>
  <%= render @maker.gravatar_url %>
<%- else -%>
  <%= image_tag @maker.gravatar_url(:default) %>
  <%= render @maker.gravatar_url %>
<%- end -%>

<%= link_to 'Edit User', edit_maker_path(@maker) %> |
<%= link_to 'Back to Users', users_path %>